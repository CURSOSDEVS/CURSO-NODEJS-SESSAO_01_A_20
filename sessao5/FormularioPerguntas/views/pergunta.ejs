<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h2><%= pergunta.titulo %></h2>
        <h6><%= pergunta.descricao %></h6>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea class="form-control" name="corpo" placeholder="Digite sua resposta.."></textarea>
            <input type="hidden" name="perguntaid" value="<%= pergunta.id %>">
            <button style="margin-top: 5px;" type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
            <h4>Respostas anteriores:</h4>
        <hr>
        <% respostas.forEach(resposta =>{ %>
            <div class="card">
                <div class="card-header ">
                    <h6><%= resposta.createdAt %></h6>  
                </div>                
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <br>
        <%})%>
    
</body>
<%- include('partials/footer.ejs') %>