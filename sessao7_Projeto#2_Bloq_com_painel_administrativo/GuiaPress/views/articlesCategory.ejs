<%- include ('partials/header.ejs'); %>
<%- include ('partials/homenavbar.ejs');%>
<div class="container">
    <div style="margin-top: 10px;" class="jumbotron">
        <h1 class="display-5">Categoria <%= category.title%> !</h1>
        <hr class="my-4">
        <p>Aqui vocês encontraram artigos sobre algumas dúvidas relacionadas a categoria <%= category.title%> .</p>
    </div> 
        <% articles.forEach(article=>{ %>
        <div style="margin-top: 5px;" class="card">
        <div class="card-header">
            <%=article.title%>
        </div>
        <div class="card-body">
           <a class="btn btn-success" href="/<%= article.slug%>">Ler Artigo</a>
        </div>
    </div>
  <% }); %>
</div>
<%- include ('partials/footer.ejs');%>