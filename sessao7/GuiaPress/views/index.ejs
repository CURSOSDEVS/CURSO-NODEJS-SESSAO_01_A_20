<%- include ('partials/header.ejs'); %>
<%- include ('partials/homenavbar.ejs');%>
<div class="container">
    <div style="margin-top: 10px;" class="jumbotron">
        <h1 class="display-4">Bem vindo!</h1>
        <p class="lead">Este é um simples blog do guia do programador.</p>
        <hr class="my-4">
        <p>Aqui vocês encontraram artigos sobre algumas dúvidas relacionadas a programação.</p>
        <p class="lead">
          <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
        </p>
      </div> 
  <% articles.forEach(article=>{ %>
    <div style="margin-top: 10px;" class="card">
        <div class="card-header">
            <%=article.title%>
        </div>
        <div class="card-body">
           <a class="btn btn-success" href="/<%= article.slug%>">Ler Artigo</a>
        </div>
    </div>
  <% }); %>
</div>

